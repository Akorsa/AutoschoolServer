<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory >
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Autoschool</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.search.autoregister_listeners">false</property>
  <property name="hibernate.connection.pool_size">1</property>
  <property name="hibernate.show_sql">true</property>
  <property name="current_session_context_class">thread</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.transaction.auto_close_session">true</property>
  <mapping class="beans.Tests"/>
  <mapping class="beans.Students"/>
  <mapping class="beans.Answers"/>
  <mapping class="beans.Categories"/>
  <mapping class="beans.TypeEducation"/>
  <mapping class="beans.Avto"/>
  <mapping class="beans.Groups"/>
  <mapping class="beans.Subjects"/>
  <mapping class="beans.TypeUser"/>
  <mapping class="beans.Users"/>
  <mapping class="beans.Educationtypes"/>
  <mapping class="beans.Questions"/>
  <mapping class="beans.Teachers"/>
  <mapping class="beans.Themes"/>
  <mapping class="beans.TypeTeacher"/>
  <mapping class="beans.Schedules"/>
  <mapping class="beans.Drivingschedule"/>
  <mapping class="beans.YearOfEducation"/>
  <mapping class="beans.LinkTeacherSubject"/>
 </session-factory>
</hibernate-configuration>
